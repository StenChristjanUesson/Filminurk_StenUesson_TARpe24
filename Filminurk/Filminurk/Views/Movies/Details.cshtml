@model Filminurk.Models.Movies.MoviesDetailsViewModel

<h1>Filmi info</h1>

<div>
	<h4>Filmi info</h4>
	<hr/>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="ID" class="col-sm-2 col-form-label">@Html.DisplayFor(Model => Model.ID)</label>
		</div>
	</dl>

	<dl class="row">
		<div class="form-group row">
			<label asp-for="Title" class="col-sm-2 col-form-label">@Html.DisplayFor(Model => Model.Title)</label>
		</div>
	</dl>

	<dl class="row">
		<div class="form-group row">
			<label asp-for="Description" class="col-sm-2 col-form-label">@Html.DisplayFor(Model => Model.Description)</label>
		</div>
	</dl>

	<dl class="row">
		<div class="form-group row">
			<label asp-for="FirstPublished" class="col-sm-2 col-form-label">@Html.DisplayFor(Model => Model.FirstPublished)</label>
		</div>
	</dl>

	<dl class="row">
		<div class="form-group row">
			<label asp-for="Director" class="col-sm-2 col-form-label">@Html.DisplayFor(Model => Model.Director)</label>
		</div>
	</dl>

	<dl class="row">
		<div class="form-group row">
			<label asp-for="CurrentRatting" class="col-sm-2 col-form-label">@Html.DisplayFor(Model => Model.CurrentRatting)</label>
		</div>
	</dl>

	<dl class="row">
		<div class="form-group row">
			<label asp-for="MovieCreationCost" class="col-sm-2 col-form-label">@Html.DisplayFor(Model => Model.MovieCreationCost)</label>
		</div>
	</dl>

	<dl class="row">
		<div class="form-group row">
			<label asp-for="Studio" class="col-sm-2 col-form-label">@Html.DisplayFor(Model => Model.Studio)</label>
		</div>
	</dl>

	<dl class="row">
		<div class="form-group row">
			<label asp-for="genre" class="col-sm-2 col-form-label">@Html.DisplayFor(Model => Model.genre)</label>
		</div>
	</dl>
	<dl>
		@foreach (var image in Model.Images)
		{
			<partial name="_Images" model="image"/>
		}
	</dl>

	<hr/>

	<a asp-action="Index" asp-controller="Movies" class="btn btn-outline-danger">Tagasi</a>
</div>