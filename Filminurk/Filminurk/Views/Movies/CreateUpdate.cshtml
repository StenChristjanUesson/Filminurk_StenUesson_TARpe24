﻿@using Filminurk.Core.Domain
@using Filminurk.Models.Movies

@model Filminurk.Models.Movies.MoviesCreateUpdateViewModel

@if (Model.ID != Guid.Empty)
{
	<h1>Muuda Film</h1>
}
else
{
	<h1>Lisa Film</h1>
}

<div>
	<form method="post" enctype="multipart/form-data">
		<input asp-for="ID" type="hidden" />
		<input asp-for="EntryCreatedAt" type="hidden" />
		<input asp-for="EntryModifiedAt" type="hidden" />

		<div class="form-group row">
			<label asp-for="Title" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Title" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="Description" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Description" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="FirstPublished" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="FirstPublished" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="Director" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Director" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="CurrentRatting" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="CurrentRatting" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="MovieCreationCost" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="MovieCreationCost" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="Studio" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Studio" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="genre" class="col-ms-2 col-form-label"></label>
			<div class="col-sm-10">
				<select asp-for="genre" asp-items="Html.GetEnumSelectList<genre>()">
					<option value="">-- Vali Žanr --</option>
				</select>
				<span></span>
			</div>
		</div>
		@if (Model.ID != Guid.Empty)
		{
			<input asp-action="Create" asp-controller="Movies" type="submit" class="btn btn-primary" value="Create" />
		}
		else
		{
			<input asp-action="Update" asp-controller="Movies" type="submit" class="btn btn-primary" value="Update" />
		}
		<input asp-action="Indext" asp-controller="Movies" class="btn btn-success" value="Back" />


	</form>
</div>