@model Filminurk.Models.UserComments.UserCommentCreateViewModel
<h1>Add New Comment:</h1>
<div>
	<form method="post" enctype="multipart/form-data">
		<input asp-for="CommentID" type="hidden"/>
		<input asp-for="CommentCreatedAt" type="hidden"/>
		<input asp-for="CommentModifiedAt" type="hidden"/>
		<input asp-for="CommenterUserID" type="hidden" />

		<div>
			<label asp-for="CommenterBody" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="CommenterBody"/>
			</div>
		</div>

		<div>
			<label asp-for="CommentedScore" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="CommentedScore" />
			</div>
		</div>

		<input asp-action="NewComment" asp-controller="UserComments" type="submit" class="btn btn-success" value="Post Comment"/>

	</form>
</div>