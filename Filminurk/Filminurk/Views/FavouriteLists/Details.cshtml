@model Filminurk.Models.FavouritesLists.FavoriteListUserDetailsViewModel

@{
	int rowNumber = 1;
}
<div>
	@if (Model.IsReported == true)
	{
		@:Sinu Nimekiri rikub kogukonna reegleid <br>
		@:Oleme seadnud nimekirja privaatseks kuni admin selle üle vaatab
	}
	<table>
		<tr>@Model.ListName</tr>
		<tr><partial name="_ImageIndex" model="@Model.Image"></partial></tr>
	</table>
</div>
<div>
	<table class="table">
		@foreach (var movie in Model.ListOfMovies)
		{
			<tr>
				<table class="table" style="border:thick;">
					<tr>
						<td colspan="2">@movie.Title</td>
					</tr>
					<tr>
						<td>(IMAGE HERE)</td>
						<td>
							<table>
								<tr>@movie.Description</tr>
								<tr>@movie.Director</tr>
								<tr>@movie.MovieCreationCost</tr>
								<tr>@movie.CurrentRatting</tr>
								<tr>@movie.genre</tr>
							</table>
						</td>
					</tr>
				</table>
			</tr>
		}
	</table>
	<div>
		<input asp-action="UserDelete" asp-controller="FavouriteListsController" asp-route-id="@Model.FavouriteListID" type="submit" class="btn btn-danger" value="Kustuta Nimekiri"/>
		<input asp-action="UserTogglePrivacy" asp-controller="FavouriteListsController" asp-route-id="@Model.FavouriteListID" type="submit" class="btn btn-warning" value="Muuda nimekiri privaatseks"/>
		<input asp-action="UserEditList" asp-controller="FavouriteListsController" asp-route-id="@Model.FavouriteListID" type="submit" class="btn btn-success" value="Muuda nimekirja sisu ja andmeid"/>
		<a asp-action="Index" asp-controller="FavouriteListsController" class="btn btn-success">Tagasi</a>
	</div>
</div>